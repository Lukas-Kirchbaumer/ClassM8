<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laubi.myapplication.VoteActivity">

    <Spinner
        android:layout_height="48dp"
        android:id="@+id/spPresidentChoice"
        android:layout_width="300dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:id="@+id/spDeputyChoice"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/spPresidentChoice"
        app:layout_constraintHorizontal_bias="0.52" />

    <TextView
        android:text="Klassensprecher"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:id="@+id/tvVotePresident"
        app:layout_constraintLeft_toLeftOf="@+id/spPresidentChoice"
        app:layout_constraintBottom_toTopOf="@+id/spPresidentChoice" />

    <TextView
        android:text="Stellvertreter"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/tvVoteDeputy"
        app:layout_constraintLeft_toLeftOf="@+id/spDeputyChoice"
        app:layout_constraintBottom_toTopOf="@+id/spDeputyChoice" />

    <Button
        android:text="Vote"
        android:layout_height="wrap_content"
        android:id="@+id/btnVote"
        style="@android:style/Widget.Material.Button"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_width="150dp" />
</android.support.constraint.ConstraintLayout>

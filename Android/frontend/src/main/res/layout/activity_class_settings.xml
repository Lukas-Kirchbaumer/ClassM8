<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laubi.myapplication.ClassSettingsActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtClassSettingsName"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtClassSettingsRoom"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtClassSettingsSchool" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClassSettingsName"
        app:layout_constraintLeft_toLeftOf="@+id/txtClassSettingsName"
        app:layout_constraintBottom_toTopOf="@+id/txtClassSettingsName" />

    <TextView
        android:text="Schule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClassSettingsSchool"
        app:layout_constraintBottom_toTopOf="@+id/txtClassSettingsSchool"
        app:layout_constraintLeft_toLeftOf="@+id/txtClassSettingsSchool" />

    <TextView
        android:text="Raum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClassSettingsRoom"
        app:layout_constraintLeft_toLeftOf="@+id/txtClassSettingsRoom"
        app:layout_constraintBottom_toTopOf="@+id/txtClassSettingsRoom" />

    <Button
        android:text="Ok"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdateClass"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/btnDeleteClass"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:drawable/ic_menu_delete"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClassSettingsError"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintLeft_toLeftOf="@+id/txtClassSettingsRoom"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtClassSettingsRoom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/txtClassSettingsSchool"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtClassSettingsName"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

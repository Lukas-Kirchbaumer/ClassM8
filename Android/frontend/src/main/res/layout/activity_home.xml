<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laubi.myapplication.HomeActivity"
    android:layout_marginLeft="0.1dp"
    android:layout_marginRight="0.1dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/homeHeadline"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:text="currClass"
            android:layout_height="wrap_content"
            android:id="@+id/tvCurrClass"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="0"
            tools:layout_editor_absoluteY="11dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.33" />

        <Button
            android:text="Vote"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartVote"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginRight="20dp"
            android:layout_width="70dp" />

        <Button
            android:id="@+id/btnM8Settings"
            android:layout_row="0"
            android:layout_column="6"
            tools:layout_editor_absoluteY="309dp"
            tools:layout_editor_absoluteX="8dp"
            style="@android:style/Widget.Material.Button"
            android:layout_width="50dp"
            android:background="@mipmap/settingsicon"
            android:layout_height="50dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDownloads"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/homeHeadline"
        style="@android:style/Widget.Holo.Button"
        android:background="@android:drawable/stat_sys_download"/>
      <!--  android:backgroundTint="@color/abc_input_method_navigation_guard" -->


    <ListView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/lvClassM8s"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/homeHeadline" />

    <TextView
        android:text="Your M8s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/lvClassM8s"
        app:layout_constraintLeft_toLeftOf="@+id/lvClassM8s" />

    <Button
        android:text="Neuer M8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenAddM8"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lvClassM8s"
        style="@android:style/Widget.Material.Button" />

</android.support.constraint.ConstraintLayout>

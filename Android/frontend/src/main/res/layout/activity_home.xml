<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laubi.myapplication.HomeActivity"
    android:layout_marginLeft="0.1dp"
    android:layout_marginRight="0.1dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/homeHeadline"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:text="currClass"
            android:layout_height="wrap_content"
            android:id="@+id/tvCurrClass"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="0"
            tools:layout_editor_absoluteY="11dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.38" />

        <Button
            android:text="Vote"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartVote"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:layout_width="60dp" />

        <Button
            android:layout_height="40dp"
            android:id="@+id/btnDownloads"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeHeadline"
            style="@android:style/Widget.Holo.Button"
            android:background="@android:drawable/stat_sys_download"
            android:backgroundTint="@color/abc_input_method_navigation_guard"
            android:layout_weight="0.17"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp" />

        <Button
            android:id="@+id/btnM8Settings"
            android:layout_row="0"
            android:layout_column="6"
            tools:layout_editor_absoluteY="309dp"
            tools:layout_editor_absoluteX="8dp"
            style="@android:style/Widget.Material.Button"
            android:layout_width="50dp"
            android:background="@mipmap/settingsicon"
            android:layout_height="50dp" />


    </LinearLayout>


    <ListView
        android:id="@+id/lvClassM8s"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="70dp"
        android:scrollbars="none"
        android:textIsSelectable="false"
        android:listSelector="@android:color/transparent"
        android:layout_height="275dp"
        app:layout_constraintBottom_toBottomOf="@+id/lvMessages"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/homeHeadline" />

    <TextView
        android:text="Your M8s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/lvClassM8s"
        app:layout_constraintLeft_toLeftOf="@+id/lvClassM8s"
        android:layout_marginBottom="5dp" />

    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="215dp"
        style="@android:style/Widget.Material.Light.ListView"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/homeHeadline"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lvClassM8s"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lvMessages"
        android:layout_height="32dp"
        app:layout_constraintVertical_bias="0.65999997"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="240dp" />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_height="50dp"
        android:layout_width="65dp"
        android:background="@android:drawable/ic_menu_send"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lvMessages"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.66" />

</android.support.constraint.ConstraintLayout>

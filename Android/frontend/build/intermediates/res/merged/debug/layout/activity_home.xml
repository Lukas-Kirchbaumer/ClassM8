<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laubi.myapplication.HomeActivity"
    android:layout_marginLeft="0.1dp"
    android:layout_marginRight="0.1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/homeHeadline"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:text="currClass"
            android:layout_height="wrap_content"
            android:id="@+id/tvCurrClass"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="0"
            tools:layout_editor_absoluteY="11dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.33" />

        <Button
            android:text="Vote"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartVote"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginRight="20dp"
            android:layout_width="70dp" />

        <Button
            android:id="@+id/btnM8Settings"
            android:layout_row="0"
            android:layout_column="6"
            tools:layout_editor_absoluteY="309dp"
            tools:layout_editor_absoluteX="8dp"
            style="@android:style/Widget.Material.Button"
            android:layout_width="50dp"
            android:background="@mipmap/settingsicon"
            android:layout_height="50dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
